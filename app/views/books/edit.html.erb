<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model:@book do |f|%>
        <p>Title</p>
        <%= f.text_field :title, style: "width:100%" %>
        <p>Opinion</p>
        <%= f.text_area :body, style: "width:100%" %>
        </br>
        <%= f.submit "Update Book" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", user_path(@book.user_id) %>
      </div>
    </div>
  </div>
</div>