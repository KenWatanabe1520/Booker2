<div class="container mt-3">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model:@user do |f|%>
        <p>Name</p>
        <%= f.text_field :name, style: "width:100%" %>
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p>introduction</p>
        <%= f.text_area :introduction, style: "width:100%" %>
        </br>
        <br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>