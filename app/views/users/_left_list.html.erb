    <div class="col-md-3">
      <!--ユーザー情報-->
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <!--ユーザーエディットに飛ぶボタン-->
      <div class="row btn btn-outline-secondary btn-block mt-5">
        <%= link_to edit_user_path(user.id) do %>
            <i class="fas fa-user-cog text-secondary"></i>
        <% end %>
      </div>
      <!--ユーザー処理ここまで-->
      <!--New Bookの作成部分-->
      <div class="mt-3">
        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
          <p>Title</p>
          <%= f.text_field :title, style: "width:100%" %>
          <p>Opinion</p>
          <%= f.text_area :body, style: "width:100%" %>
          <%= f.submit "Create Book" %>
        <% end %>
      </div>
    </div>
